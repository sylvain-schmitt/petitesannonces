{% extends 'base.html.twig' %}

{% block title %}
	{{annonce.title}}
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
	<div class="container mt-5 mb-5">
		<div class="row">
			<div class="col-md-8">
				<!--carrousel-->
			</div>
			<div class="col-md-4">
				<div class="card text-center">
					<div class="row no-gutters">
						<div class="col-md-4">
							<img src="{{ asset('img/user.png') }}" style="max-width: 100px;" class="card-img" alt="{{ annonce.title }}">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">
									{{annonce.users.firstname}}
								</h5>
							</div>
						</div>
						<div class="card-body">
							<div class="container" style="margin-top: 50px;">
								<p>{{ annonce.users.username}}</p>
								<p>{{ annonce.users.phone}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="card mb-3 mt-4 align-center" style="max-width: 1200px;">
			<div class="row no-gutters">
				<div class="col-md-4">
					<img src="{{ asset('img/logo.webp') }}" style="max-width: 150px;" class="card-img" alt="{{ annonce.title }}">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">
							{{ annonce.title }}
						</h5>
						<p class="card-text">
							<strong>{{ annonce.price }}</strong>
						</p>
						<p class="card-text">{{ annonce.content|raw }}</p>
						<p class="card-text">
							<small class="text-muted">Publié le
								{{annonce.createdAt | date ('d/m/Y à H:i')}}
							</small>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
{% block javascripts %}{% endblock %}
